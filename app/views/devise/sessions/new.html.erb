<div class="row justify-content-center mb-5 mt-4">
  <div class="col-md-8 col-lg-5">
    <div class="card shadow-sm p-4 border-0">
      <div class="card-body">
        <h2 class="fw-bolder mb-4 text-center" style="letter-spacing: -0.05em;">Welcome Back</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label fw-bold text-muted small text-uppercase" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label fw-bold text-muted small text-uppercase" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label text-muted" %>
            </div>
          <% end %>

          <div class="d-grid mb-4">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-3 pt-3 border-top">
          <small class="text-muted">
            <%= render "devise/shared/links" %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
