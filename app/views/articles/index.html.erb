<div class="row align-items-center mb-5">
  <div class="col">
    <h1 class="m-0 fw-bolder" style="font-size: 2.5rem; letter-spacing: -0.05em;">Latest Articles</h1>
    <p class="text-muted mt-2 fs-5">Thoughts, stories, and ideas.</p>
  </div>
</div>

<div class="row g-4" id="articles">
  <% @articles.each do |article| %>
    <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
      <div class="card w-100 hover-lift text-decoration-none">
        <div class="card-body p-4 d-flex flex-column">
          <h4 class="card-title fw-bold mb-3">
            <%= link_to article.title, article_path(article), class: 'text-decoration-none text-dark' %>
          </h4>
          <p class="card-text text-muted mb-4 flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;"><%= article.body %></p>
          <div class="mt-auto d-flex justify-content-between align-items-center">
            <span class="text-muted small"><%= article.created_at.strftime("%B %d, %Y") %></span>
            <%= link_to "Read more â†’", article_path(article), class: 'text-primary fw-medium text-decoration-none' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>